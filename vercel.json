{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.js"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "CHROME_BIN": "/usr/bin/chromium-browser"
    },
    "functions": {
        "api/*.js": {
            "memory": 3008,
            "maxDuration": 60
        }
    }
} 